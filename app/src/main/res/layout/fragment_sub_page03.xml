<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="layout.SubPage03">
    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/profile_image"
                android:layout_width="match_parent"
                android:layout_height="125dp"
                android:minHeight="19dp"
                android:minWidth="19dp"
                app:srcCompat="@mipmap/macos" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Space
                android:layout_width="38dp"
                android:layout_height="match_parent"
                />

            <Spinner
                android:id="@+id/user_spinner"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_weight="8"
                android:minHeight="179dp"
                android:textAlignment="center" />

            <Button
                android:id="@+id/btn_editName"
                android:layout_width="38dp"
                android:layout_height="match_parent"
                android:background="@android:drawable/ic_menu_edit"
                android:elevation="0dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/temper"
                style="@style/Widget.AppCompat.AutoCompleteTextView"
                android:layout_width="67dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:enabled="false"
                android:inputType="number" />

            <Button
                android:id="@+id/btn_temp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1.64"
                android:background="@color/buttons"
                android:text="Temperature" />

            <Switch
                android:id="@+id/switch_temp"
                android:layout_width="67dp"
                android:layout_height="12dp"
                android:layout_weight="0.03" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/timeb"
                android:layout_width="67dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:enabled="false"
                android:inputType="number" />

            <Button
                android:id="@+id/btn_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1.38"
                android:background="@color/buttons"
                android:text="Time" />

            <Switch
                android:id="@+id/switch_time"
                android:layout_width="67dp"
                android:layout_height="12dp"
                android:layout_weight="0.02" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/test"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1.38"
                android:onClick="onClickInsert"
                android:text="Button" />

            <Button
                android:id="@+id/manual_con"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1.38"
                android:background="@color/buttons"
                android:onClick="onClickBT1"
                android:text="Manually Connect to Heater" />
        </LinearLayout>

    </LinearLayout>
</FrameLayout>
